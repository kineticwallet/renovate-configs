{
	"extends": [
		"config:base"
	],
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": [
				"^aftman.toml$"
			],
			"matchStrings": [
				".+ = \"(?<depName>.+)@(?<currentValue>.+)\""
			],
			"datasourceTemplate": "github-releases"
		}
	],
	"packageRules": [
		{
			"matchFileNames": [
				"aftman.toml"
			],
			"extractVersion": "^v?(?<version>.*)$"
		}
	]
}
